                        <!--</goals>-->
                        <!--<configuration>-->
                            <!--<locations>-->
                            <!--<location>filesystem:src/main/resources/db/migration</location>-->
                            <!--</locations>-->
                            <!--&lt;!&ndash; no point in running migrations if integration tests are skipped &ndash;&gt;-->
                            <!--<skip>${integration-tests.skip}</skip>-->
                            <!--<url>jdbc:h2:mem:exam;MODE=MySQL;DB_CLOSE_DELAY=-1;INIT=CREATE SCHEMA IF NOT EXISTS-->
                                <!--"public";-->
                            <!--</url>-->
                            <!--<user>sa</user>-->
                        <!--</configuration>-->
                    <!--</execution>-->
                <!--</executions>-->

                <!--<dependencies>-->
                    <!--<dependency>-->
                        <!--<groupId>com.h2database</groupId>-->
                        <!--<artifactId>h2</artifactId>-->
                        <!--<version>${h2-database.version}</version>-->
                    <!--</dependency>-->
                <!--</dependencies>-->
            <!--</plugin>-->
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </pluginRepository>
    </pluginRepositories>
</project>
